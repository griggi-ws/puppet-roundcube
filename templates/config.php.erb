<% @_merged_config.keys.sort.each do |key| -%>
<% value = @_merged_config[key] -%>
  <%- if value.is_a? Array -%>
$config['<%= key %>'] = array(<%= value.map! { |element| "'#{element}'" }.join(', ') %>);
  <%- else -%>
$config['<%= key %>'] = <%= (value.is_a? String) ? "'#{value}'" : value %>;
  <%- end -%>
<% end -%>